##################################################
# MONITORING SYSTEM CONFIGURATION
##################################################

#-------------------------------------------------
# General Settings
#-------------------------------------------------
PROJECT_NAME=monitoring-system
COMPOSE_PROJECT_NAME=monitoring
DOCKER_NETWORK=monitoring-network

#-------------------------------------------------
# Module Control - Enable/Disable Components
#-------------------------------------------------
# Core components (always enabled)
ENABLE_INFLUXDB=true
ENABLE_GRAFANA=true
ENABLE_PROMETHEUS=true

# Optional modules
ENABLE_SNMP=false              # Set to true to monitor network devices
ENABLE_EXEC_SCRIPTS=false      # Set to true for custom monitoring scripts

#-------------------------------------------------
# InfluxDB Configuration
#-------------------------------------------------
INFLUXDB_VERSION=2.7.0
INFLUXDB_HOST=influxdb
INFLUXDB_PORT=8086
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=changeMe
INFLUXDB_ORG=monitoring-org
INFLUXDB_BUCKET=metrics
INFLUXDB_RETENTION=30d
INFLUXDB_TOKEN=my-super-secret-auth-token
# Storage
INFLUXDB_DATA_PATH=./data/influxdb
INFLUXDB_CONFIG_PATH=./data/influxdb-config

#-------------------------------------------------
# Grafana Configuration
#-------------------------------------------------
GRAFANA_VERSION=12.2.0-16636675413
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
# Plugins
GRAFANA_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel
# Storage
GRAFANA_DATA_PATH=./data/grafana

#-------------------------------------------------
# Prometheus Configuration
#-------------------------------------------------
PROMETHEUS_VERSION=v3.5.0
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_RETENTION_SIZE=10GB
# Storage
PROMETHEUS_DATA_PATH=./data/prometheus

#-------------------------------------------------
# Node Exporter Configuration
#-------------------------------------------------
NODE_EXPORTER_VERSION=v1.9.0
NODE_EXPORTER_PORT=9100
# Additional node exporters (comma separated)
# Format: hostname:port,hostname:port
NODE_EXPORTER_TARGETS=localhost:9100

#-------------------------------------------------
# Telegraf Base Configuration
#-------------------------------------------------
TELEGRAF_VERSION=1.27.0
TELEGRAF_INTERVAL=10s
TELEGRAF_ROUND_INTERVAL=true
TELEGRAF_METRIC_BATCH_SIZE=1000
TELEGRAF_METRIC_BUFFER_LIMIT=10000
TELEGRAF_COLLECTION_JITTER=0s
TELEGRAF_FLUSH_INTERVAL=10s
TELEGRAF_FLUSH_JITTER=0s
TELEGRAF_PRECISION=s
TELEGRAF_DEBUG=false
TELEGRAF_QUIET=false

#-------------------------------------------------
# Portainer Base Configuration
#-------------------------------------------------
ENABLE_PORTAINER=true
PORTAINER_PORT=9000
PORTIANER_VERSION=lts
PORTAINER_DATA_PATH=./data/portainer

#-------------------------------------------------
# SNMP Module Configuration (if ENABLE_SNMP=true)
#-------------------------------------------------
# SNMP Agent Configuration
TELEGRAF_SNMP_INTERVAL=60s
# Comma separated list of devices
# Format: name:host:port:community,name:host:port:community
TELEGRAF_SNMP_AGENTS=switch1:192.168.1.10:161:public,router1:192.168.1.1:161:public

# SNMP Version (2c or 3)
TELEGRAF_SNMP_VERSION=2c
# SNMP v3 settings (if version=3)
TELEGRAF_SNMP_SEC_NAME=
TELEGRAF_SNMP_AUTH_PROTOCOL=
TELEGRAF_SNMP_AUTH_PASSWORD=
TELEGRAF_SNMP_SEC_LEVEL=
TELEGRAF_SNMP_PRIV_PROTOCOL=
TELEGRAF_SNMP_PRIV_PASSWORD=

# MIB directories
TELEGRAF_SNMP_MIB_DIRS=/usr/share/snmp/mibs

#-------------------------------------------------
# Exec Scripts Module Configuration (if ENABLE_EXEC_SCRIPTS=true)
#-------------------------------------------------
TELEGRAF_EXEC_INTERVAL=300s
# Scripts directory (mounted to container)
TELEGRAF_EXEC_SCRIPTS_PATH=./exec-scripts
# Timeout for script execution
TELEGRAF_EXEC_TIMEOUT=30s

#-------------------------------------------------
# Resource Limits
#-------------------------------------------------
# InfluxDB
INFLUXDB_MEMORY_LIMIT=2g
INFLUXDB_CPU_LIMIT=2

# Grafana  
GRAFANA_MEMORY_LIMIT=1g
GRAFANA_CPU_LIMIT=1

# Prometheus
PROMETHEUS_MEMORY_LIMIT=2g
PROMETHEUS_CPU_LIMIT=2

# Telegraf
TELEGRAF_MEMORY_LIMIT=512m
TELEGRAF_CPU_LIMIT=1

#-------------------------------------------------
# Logging Configuration
#-------------------------------------------------
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

#-------------------------------------------------
# Security Settings
#-------------------------------------------------
# Enable HTTPS for Grafana
GRAFANA_ENABLE_HTTPS=false
GRAFANA_CERT_FILE=
GRAFANA_CERT_KEY=

# Enable authentication for Prometheus
PROMETHEUS_ENABLE_AUTH=false
PROMETHEUS_BASIC_AUTH_USERS=

#-------------------------------------------------
# Alerting Configuration (optional)
#-------------------------------------------------
# AlertManager
ENABLE_ALERTMANAGER=false
ALERTMANAGER_VERSION=0.25.0
ALERTMANAGER_PORT=9093

# Notification channels
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_HOST=
ALERT_EMAIL_PORT=
ALERT_EMAIL_USER=
ALERT_EMAIL_PASSWORD=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK=
ALERT_SLACK_CHANNEL=

#-------------------------------------------------
# Backup Configuration
#-------------------------------------------------
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

#-------------------------------------------------
# Development/Debug Settings
#-------------------------------------------------
DEBUG_MODE=false
ENABLE_MONITORING_DEBUG_ENDPOINTS=false